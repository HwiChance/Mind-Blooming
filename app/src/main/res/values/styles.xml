<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.App.toolbar" parent="">
        <item name="colorPrimary">@color/blube</item>
        <item name="colorPrimaryVariant">@color/camborne</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white_gray</item>
        <item name="colorSecondaryVariant">@color/mackup</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="toolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.toolbar</item>
        <item name="titleTextAppearance">@style/toolbarTitleText</item>
    </style>

    <style name="toolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="seriesEditText">
        <item name="android:paddingTop">0dp</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="colorControlActivated">@color/white_gray</item>
        <item name="colorControlHighlight">@color/white_gray</item>
        <item name="colorControlNormal">@color/white_gray</item>
    </style>

    <style name="seriesTextLabel">
        <item name="android:textColor">@color/white_gray</item>
        <item name="android:textSize">@dimen/toolbar_label_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>