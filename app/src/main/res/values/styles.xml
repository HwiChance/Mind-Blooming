<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="seriesEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">0dp</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="colorControlActivated">@color/white_gray</item>
        <item name="colorControlHighlight">@color/white_gray</item>
        <item name="colorControlNormal">@color/white_gray</item>
    </style>

    <style name="seriesTextLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_gray</item>
        <item name="android:textSize">@dimen/toolbar_label_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>