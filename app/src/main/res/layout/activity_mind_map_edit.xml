<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MindMapEditActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mindMapEditToolbar"
        style="@style/toolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/idea_edit_menu"
        app:navigationIcon="@drawable/ic_clear_24dp">

        <TextView
            android:id="@+id/mindMapTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_text_size"
            android:textStyle="bold"
            tools:ignore="LabelFor" />
    </com.google.android.material.appbar.MaterialToolbar>

    <com.hwichance.android.mindblooming.custom_views.FlexibleLayout
        android:id="@+id/editFlexibleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>